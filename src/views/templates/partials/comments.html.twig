<article class = "comments">
        <h3>Comments</h3>
            {% for singleComment in product.comments %}
                <div class = "comment">
                    <div class = "user-info">
                        <img class = "user-img" src = {{ singleComment.user.profile_image }}/>
                        <div class = "username-date">
                            <h3>{{ singleComment.user.name }}</h3>
                            <p>28 Aug 2020, 11:16PM</p>          
                        </div>
                        <img class = "reply-icon" src="../../images/reply.svg">
                    </div>
                    <p class = "comment-text">
                        {{ singleComment.comment }}
                    </p>
                </div>
                <div class = "reply">
                    {% if singleComment.replies %}
                        {% for reply in singleComment.replies %}
                            <div class = "comment">
                                <div class = "user-info">
                                    <img class = "user-img" src = {{ reply.user.profile_image }}/>
                                    <div class = "username-date">
                                        <h3>{{ reply.user.name }}</h3>
                                        <p>28 Aug 2020, 11:16PM</p>          
                                    </div>
                                    <img class = "reply-icon" src="../../images/reply.svg">
                                </div>
                                <p class = "comment-text">
                                    {{ reply.comment }}
                                </p>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            {% endfor %}
</article>

<h3>Leave a comment</h3>
<form>
    <div class = "name-email">
        <div class = "name">
            <label for = "name">Name</label>
            <input id = "name" placeholder = "Your name" type = "text"></input>
        </div>

        <div class = "name">
            <label for = "email">Email</label>
            <input id = "email" placeholder = "Your email" type = "text"></input>
        </div>
    </div>

    <div class = "comment-heading">
        <label for = "comment">Comment</label>
        <p class = "count">0/500</p>
    </div>
    <input class = "enter-comment" id = "comment" placeholder = "Your comment" type = "text"></input>

    <br/>
    <div class = "save-name">
        <input class = "check" id = "save" type = "checkbox"></input>
        <label class = "save" for = "save">Save my name and email in this browser for the next time I comment.</label>
    </div>

    <button class = "comment-btn">COMMENT</button>
</form>